#pragma once

#ifndef ANIMALS_H
#define ANIMALS_H
#include <string>
#include <iostream>
#include <vector>


using namespace std;

struct Person {
	char* FN; 
	char* LN;
	int age;
};

class Family
{
private:
	char* name;
	Person Parent[2];
	Person Children[30];
	
	
public:
	//Family(a, int b);
	void setName(char* n);
	char * getName();
	Person getParents();
	Person getChildren();
	void setParent(char FN[], char LN[], int a, int i);
	void setChildren(char FN[], char LN[], int a, int i);
};
#endif
